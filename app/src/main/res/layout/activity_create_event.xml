<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="dtindustries.go5c.CreateEvent"
    android:background="#282828">

    <EditText
        android:id="@+id/eventTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="start"
        android:gravity="center|left"
        android:hint="Event Title*"
        android:inputType="text"
        android:background="@drawable/edit_text_border"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColorHint="#ffffff" />
    <EditText
    android:id="@+id/description"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:ellipsize="start"
    android:gravity="center|left"
    android:hint="Description"
    android:inputType="text"
    android:background="@drawable/edit_text_border"
    android:textStyle="bold"
    android:textSize="25sp"
        android:textColorHint="#ffffff"
        android:layout_below="@+id/endtime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

         />
    <EditText
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="start"
        android:gravity="center|left"
        android:hint="Location*"
        android:inputType="text"
        android:background="@drawable/edit_text_border"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_below="@+id/eventTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColorHint="#ffffff" />
    <EditText
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="start"
        android:gravity="center|left"
        android:hint="Date*"
        android:inputType="text"
        android:background="@drawable/edit_text_border"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_below="@+id/location"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColorHint="#ffffff" />
    <EditText
        android:id="@+id/category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="start"
        android:gravity="center|left"
        android:hint="Category"
        android:inputType="text"
        android:background="@drawable/edit_text_border"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColorHint="#ffffff"
        android:layout_below="@+id/description"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/starttime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="start"
        android:gravity="center|left"
        android:hint="Start Time*"
        android:inputType="text"
        android:background="@drawable/edit_text_border"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColorHint="#ffffff"
        android:layout_below="@+id/date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/endtime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="start"
        android:gravity="center|left"
        android:hint="End Time*"
        android:inputType="text"
        android:background="@drawable/edit_text_border"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColorHint="#ffffff"
        android:layout_below="@+id/starttime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Event"
        android:id="@+id/createEventbt"
        android:textStyle="bold"
        android:background="#00aa55"
        android:layout_below="@+id/checkPrivate"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginTop="46dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* indicates required field"
        android:id="@+id/textView"
        android:textColor="#ffff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/category" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please use mm/dd/yy format for date"
        android:id="@+id/textView2"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#ffff"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make Private"
        android:id="@+id/checkPrivate"
        android:textColor="#ffffff"
        android:textSize="23sp"
        android:onClick="onClick"
        android:checked="false"
        android:textStyle="bold"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

</RelativeLayout>
