<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="dtindustries.go5c.signup"
    android:background="#282828">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtfname"
        android:layout_marginTop="48dp"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:background="#5d5d5d"
        android:textSize="20sp"
        android:textStyle="bold"
        android:hint="First Name*"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtlname"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:background="#5d5d5d"
        android:layout_below="@+id/edtfname"
        android:layout_alignLeft="@+id/edtfname"
        android:layout_alignStart="@+id/edtfname"
        android:textStyle="bold"
        android:textSize="20sp"
        android:hint="Last Name*" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtuser"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:background="#5d5d5d"
        android:layout_below="@+id/edtlname"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textStyle="bold"
        android:hint="Username*" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtpass"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:background="#5d5d5d"
        android:layout_below="@+id/edtuser"
        android:layout_alignLeft="@+id/edtuser"
        android:layout_alignStart="@+id/edtuser"
        android:textSize="20sp"
        android:textStyle="bold"
        android:hint="Password*"
        android:inputType="textPassword" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtrpass"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:background="#5d5d5d"
        android:layout_below="@+id/edtpass"
        android:layout_alignLeft="@+id/edtpass"
        android:layout_alignStart="@+id/edtpass"
        android:textStyle="bold"
        android:textSize="20sp"
        android:hint="Retype Password*"
        android:inputType="textPassword" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtschool"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:background="#5d5d5d"
        android:layout_below="@+id/edtrpass"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="20sp"
        android:hint="School" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtmajor"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:background="#5d5d5d"
        android:textStyle="bold"
        android:textSize="20sp"
        android:hint="Major"
        android:layout_below="@+id/edtschool"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:id="@+id/btcreate"
        android:background="#00aa55"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_marginTop="77dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtemail"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:background="#5d5d5d"
        android:textSize="20sp"
        android:textStyle="bold"
        android:hint="Email*"
        android:layout_below="@+id/edtmajor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* indicates required field"
        android:id="@+id/textView"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_below="@+id/edtemail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
